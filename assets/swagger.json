        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "createAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
